<% include ../partials/headers %>
<!-- ============================== EDIT ==============================-->
<div class="container">
    <br>
    <h1><strong>EDIT Members</strong></h1>
    <hr class="my-2">
    <br>
    <form action="" method="POST">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Project Name</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectName" placeholder="Project Name" name="projectName"
                    value="<%= project.projectname %>" disabled>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Nama</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="projectName" placeholder="Project Name" name="projectName"
                    value="<%= users.firstname %>" disabled>
            </div>
        </div>

        <div class="form-group row">
            <label class="col-2 col-form-label">
                Jabatan
            </label>
            <div class="col-10">
                <select class="custom-select" name="member">
                    <option value="">Choose the position ...</option>
                    <option>Manager</option>
                    <option>Software Developer</option>
                    <option>Software Engineer</option>
                    <option selected>Quality Assurance</option>
                </select>
            </div>
        </div>
        <br>
        <button class="btn btn-success" type="submit">Save</button>
        <a href="/projects/projects_detail_page_members" class="btn btn-warning">Cancel</a>
    </form>
</div>
<% include ../partials/footers %>